{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015.core",
      "es2015.proxy",
      "es2015.promise",
      "es2015.symbol",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}
